<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material3 support -->
    <style name="Base.Theme.EventWave" parent="android:Theme.Material.Light.NoActionBar" tools:targetApi="21">
        <!-- Primary colors -->
        <item name="android:colorPrimary" tools:targetApi="21">@color/accent_green</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/gray_600</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/accent_green</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background_green</item>
        <item name="android:textColorPrimary">@color/pure_black</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/background_green</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <!-- Material3 theme for API 31+ -->
    <style name="Base.Theme.EventWave.Material3" parent="Theme.Material3.DayNight.NoActionBar" tools:targetApi="31">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorOnPrimary">@color/pure_black</item>
        <item name="colorPrimaryContainer">@color/background_green</item>
        <item name="colorOnPrimaryContainer">@color/pure_black</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/gray_600</item>
        <item name="colorOnSecondary">@color/pure_white</item>
        <item name="colorSecondaryContainer">@color/gray_100</item>
        <item name="colorOnSecondaryContainer">@color/pure_black</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/accent_green</item>
        <item name="colorOnTertiary">@color/pure_black</item>
        <item name="colorTertiaryContainer">@color/background_green</item>
        <item name="colorOnTertiaryContainer">@color/pure_black</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/purple_500</item>
        <item name="colorOnError">@color/pure_white</item>
        <item name="colorErrorContainer">@color/purple_200</item>
        <item name="colorOnErrorContainer">@color/pure_black</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/pure_white</item>
        <item name="colorOnSurface">@color/pure_black</item>
        <item name="colorSurfaceVariant">@color/gray_50</item>
        <item name="colorOnSurfaceVariant">@color/gray_600</item>
        <item name="colorSurfaceContainer">@color/gray_100</item>
        <item name="colorSurfaceContainerHigh">@color/gray_200</item>
        <item name="colorSurfaceContainerHighest">@color/gray_300</item>
        <item name="colorSurfaceContainerLow">@color/gray_50</item>
        <item name="colorSurfaceContainerLowest">@color/pure_white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_green</item>
        <item name="colorOnBackground">@color/pure_black</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/gray_300</item>
        <item name="colorOutlineVariant">@color/gray_200</item>
    </style>

    <!-- AppCompat fallback theme -->
    <style name="Base.Theme.EventWave.AppCompat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorPrimaryDark">@color/gray_600</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="android:colorBackground">@color/background_green</item>
        <item name="android:textColorPrimary">@color/pure_black</item>
    </style>

    <!-- Main theme - will resolve to appropriate base theme -->
    <style name="Theme.EventWave" parent="Base.Theme.EventWave.AppCompat" />
</resources>